      "type": "string"
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "iconType": {
      "type": "enumeration",
      "enum": ["phone", "email", "linkedin", "location", "custom"],
      "default": "custom"
    },
    "isExternal": {
      "type": "boolean",
      "default": false
    },
    "target": {
      "type": "enumeration",
      "enum": ["_self", "_blank"],
      "default": "_self"
    },
    "showIcon": {
      "type": "boolean",
      "default": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  },
  "config": {}
}
