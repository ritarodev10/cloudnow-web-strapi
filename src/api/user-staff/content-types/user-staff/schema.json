{
  "kind": "collectionType",
  "collectionName": "user_staffs",
  "info": {
    "singularName": "user-staff",
    "pluralName": "user-staffs",
    "displayName": "User Staff",
    "description": "Staff users with roles and permissions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "unique": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "firstName": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "phone": {
      "type": "string",
      "maxLength": 20
    },
    "department": {
      "type": "string",
      "maxLength": 100
    },
    "position": {
      "type": "string",
      "maxLength": 100
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "lastLoginAt": {
      "type": "datetime"
    },
    "joinedAt": {
      "type": "datetime",
      "required": true
    },
    "userRole": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::user-role.user-role",
      "inversedBy": "userStaffs"
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author",
      "mappedBy": "userStaff"
    }
  }
}
