{
  "kind": "collectionType",
  "collectionName": "user_roles",
  "info": {
    "singularName": "user-role",
    "pluralName": "user-roles",
    "displayName": "User Role",
    "description": "User roles for permission management"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "permissions": {
      "type": "json"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "isDefault": {
      "type": "boolean",
      "default": false
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "userStaffs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-staff.user-staff",
      "mappedBy": "userRole"
    }
  }
}
